# This is Git's per-user configuration file.
[user]
  name = aaronjan
  email = aaronjan98@gmail.com
[alias]
  st = status
  ci = commit
  co = checkout
  br = branch
  unstage = reset HEAD --
  last = log -1 HEAD
  pushall = "!f() { \
      remotes=$(git remote); \
      last_remote=$(echo \"$remotes\" | tail -n 1); \
      for remote in $remotes; do \
          echo Pushing to $remote; \
          git push $remote; \
          if [ \" $remote \" != \" $last_remote \" ]; then \
              echo; \
          fi; \
      done \
  }; f"
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[credential]
  helper = cache
  helper =
  helper = /usr/local/share/gcm-core/git-credential-manager-core
[credential "https://dev.azure.com"]
  useHttpPath = true
# change git's output colors
[color "status"]
  added = brightgreen
  changed = brightred
  untracked = brightmagenta
[color "diff"]
  old = brightred
  new = brightgreen
  meta = brightblue
[color "branch"]
  remote = yellow
[init]
  defaultBranch = main
[safe]
  directory = /srv/git/repos/zettelkasten.git
